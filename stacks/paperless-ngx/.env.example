# Paperless-NGX Environment Configuration
# Service: Paperless-NGX Document Management System
# VM: 103 (misc)
# Generated: 2025-10-26

# ==============================================================================
# SECRETS - Stored in Vaultwarden
# ==============================================================================
# Vaultwarden path: vm-103-misc/paperless-secrets
# Retrieve using: bw get item "paperless-secrets"

# Database Password
# Used for: PostgreSQL authentication
POSTGRES_PASSWORD=your_postgres_password_here

# Application Secret Key
# Used for: Django session encryption, CSRF tokens
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
PAPERLESS_SECRET_KEY=your_secret_key_here

# Admin Password
# Used for: Initial admin account login
PAPERLESS_ADMIN_PASSWORD=your_admin_password_here

# ==============================================================================
# NON-SECRET CONFIGURATION
# ==============================================================================

# Web Interface Port
PORT=8001

# Data Storage Paths
DATA_PATH=./data
MEDIA_PATH=./media
EXPORT_PATH=./export
CONSUME_PATH=./consume
POSTGRES_DATA_PATH=./pgdata
REDIS_DATA_PATH=./redisdata

# Database Configuration
POSTGRES_DB=paperless
POSTGRES_USER=paperless

# Server Settings
PAPERLESS_URL=https://paperless.infinity-node.com
PAPERLESS_TIME_ZONE=America/New_York

# OCR Settings
PAPERLESS_OCR_LANGUAGE=eng

# Admin Account
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_MAIL=admin@infinity-node.com

# Consumer Settings (document polling interval in seconds)
PAPERLESS_CONSUMER_POLLING=10
